<UserControl x:Class="QrWebCam.QrWebCamControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QrWebCam"
             Loaded="UserControl_Loaded"
             Unloaded="UserControl_Unloaded"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBlock  x:Name="statusText" Text="No Stream Defined" VerticalAlignment="Center" HorizontalAlignment="Center" />
        <Border BorderThickness="1" BorderBrush="Black">
            <Image x:Name="camStream" VerticalAlignment="Stretch" Stretch="Fill" HorizontalAlignment="Stretch" />
        </Border>
    </Grid>
</UserControl>
